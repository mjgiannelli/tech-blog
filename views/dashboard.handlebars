{{#if posts.length }}
<section>
    <ol>
        {{#each posts as |post| }}
        <li class='row border'>
            <article class='col-1'>
                <div id='blog-header' class='row'>
                    <div class='col-1'>
                        <a href='/dashboard/edit/{{post.id}}'>{{post.title}}</a>
                    </div>
                    <div class="col-1">
                        <span>Posted by {{post.user.username}} on {{post.created_at}}</span>
                    </div>
                </div>
                <div id='blog-content' class='row'>
                    <div class="col-10">
                        <p>{{post.post_content}}</p>
                    </div>
                </div>
            </article>
        </li>
        {{/each}}
    </ol>
</section>
<div class="row">
    <div class="col-1">
        <a href='/dashboard/newpost'><button type='button' id='post-btn'>+ New Post</button></a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-1">
        <a href='/dashboard/newpost'><button type='button' id='post-btn'>+ New Post</button></a>
    </div>
</div>
{{/if}}