<ol>
    <li class='row border'>
        <article class='col-1'>
            <div id='blog-header' class='row'>
                <div class='col-1'>
                    <h2>{{post.title}}</h2>
                </div>
                <div class="col-1">
                    <span>Posted by {{post.user.username}} on {{post.created_at}}</span>
                </div>
            </div>
            <div id='blog-content' class='row'>
                <div class="col-10">
                    <p>{{post.post_content}}</p>
                </div>
            </div>
        </article>
    </li>
</ol>
<div class='row border'>
    <div class="col-1">
            {{#each post.comments}}
        <section id='comments' class="row">
            <div class='col-10'>
                <p>{{comment_text}}</p>
            </div>
            <div class='col-10'>
                <p>-{{user.username}} on {{created_at}}</p>
            </div>
        </section>
        {{/each}}
    </div>
</div>

{{!-- {{#if loggedIn}} --}}
<form id='comment-form'>
    <label for='new-comment'>Comment</label>
    <textarea name='new-comment' id='new-comment' form='comment-form'>Enter comment here...</textarea>
    <div>
        <button type='submit'>Submit</button>
    </div>
</form>
<script src="/javascript/add-comment.js"></script>
{{!-- {{/if}} --}}